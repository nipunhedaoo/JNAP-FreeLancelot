# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: Request,searchKeyword: String ?= "")
GET     /profilePage/:ownerId                 controllers.HomeController.profilePage(ownerId: String,request : Request)
GET     /:query/wordStats/:id       controllers.HomeController.wordStats(query: String, id: Long,request : Request)
GET     /projectBySkills/:skillId/:skillName            controllers.HomeController.searchBySkill(skillId:String,skillName :String,request : Request)
GET     /ws                         controllers.HomeController.socket
+ nocsrf

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
